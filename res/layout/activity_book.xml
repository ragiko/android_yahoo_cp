<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="title"
            android:textSize="27sp" />
        
        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="book_author"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="book_publisher"
            android:textSize="20sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                
                android:id="@+id/book_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:src="@drawable/text1" />

           <com.parse.ParseImageView
               android:id="@+id/book_picture"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="40dp" 
               android:src="@drawable/text1" />

        </LinearLayout>
         
         <TextView
            style="@style/bookTitle"
            android:id="@+id/book_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="1,000円"
            android:gravity="right"
            android:textStyle="bold" />

         <Button
             android:id="@+id/contact_button"
             style="@style/Button"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="投稿者にSMSで連絡"
             android:layout_marginBottom="20dp" />

        <TextView
            style="@style/Section"
            android:text="作品情報" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp" >

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大学"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_university"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:text="book_university"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学部"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:text="book_depertment"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投稿者"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/book_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:text="book_user_name"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/Section"
            android:text="内容" />

        <TextView
            android:id="@+id/book_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="book_user_name"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>