<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.parse.ParseImageView
        android:id="@+id/text_thumb"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_title"
        style="@style/itemListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_thumb"
        android:text="text_title"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
    
    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_thumb"
        android:text="text_author"
        android:layout_marginTop="20dp"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
    
    <TextView
        android:id="@+id/text_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_thumb"
        android:text="text_publisher"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
    
    <TextView
        android:id="@+id/text_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_thumb"
        android:text="text_department"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
    
    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_thumb"
        android:text="text_price"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="400dp"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />

    <!--
    <TextView
        android:id="@+id/text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_toRightOf="@+id/text_title"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
     -->

</RelativeLayout>