<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!--
         <com.parse.ParseImageView
        android:id="@+id/text_list_thumb"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true" />
    -->

    <ImageView
        android:id="@+id/text_list_url_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="thumb"
        android:src="@drawable/temp_img" />

    <TextView
        android:id="@+id/text_list_title"
        style="@style/itemListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_list_url_thumb"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:text="text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/text_list_url_thumb" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="著者：" />

        <TextView
            android:id="@+id/text_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="text_author" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="出版社：" />

        <TextView
            android:id="@+id/text_list_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="text_publisher" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_list_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/text_list_url_thumb"
        android:background="#800000"
        android:paddingBottom="3dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="3dip"
        android:text="text_department"
        android:textColor="#ffffff" />

    <TextView
        style="@style/itemListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/text_list_url_thumb"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:text="¥"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_list_price"
        style="@style/itemListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/text_list_url_thumb"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:text="text_price"
        android:textSize="20sp" />

    <!--
    <TextView
        android:id="@+id/text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_toRightOf="@+id/text_title"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />
    -->

</RelativeLayout>