<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="10dp" >

	    <TextView
	            style="@style/Section"
	            android:text="大学・学部情報"
	            android:focusable="true"
                android:focusableInTouchMode="true" />

	    <LinearLayout style="@style/PostItemLayout" >

	        <TextView
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:text="大学" />

	        <TextView
	            android:id="@+id/textview_university"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="岐阜大学" />

	    </LinearLayout>

	    <LinearLayout style="@style/PostBottomItemLayout" >

	        <TextView
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:text="学部" />

	        <Spinner
	            android:id="@+id/spinner_dep_post"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" />

	    </LinearLayout>

	    <TextView
	            style="@style/Section"
	            android:text="書籍情報" />

	    <LinearLayout style="@style/PostItemLayout" >

	        <EditText
	            android:id="@+id/edittext_search_post"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10" />

	        <Button
	            android:id="@+id/button_search_post"
	            style="@style/Button"
	            android:layout_width="130dp"
	            android:text="書名で検索" />

	    </LinearLayout>

	    <LinearLayout style="@style/PostBottomItemLayout" >

	    <Button
	        android:id="@+id/button_barcode_post"
	        style="@style/Button"
	        android:layout_width="200dp"
	        android:text="バーコードから取得" />

	    </LinearLayout>

	    <TextView
	        android:id="@+id/textview_selected_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp" />

	    <TextView
            android:id="@+id/textview_selected_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

	    <TextView
            android:id="@+id/textview_selected_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />

	    <TextView
	            style="@style/Section"
	            android:text="書籍の状態や出品希望価格など" />

	    <LinearLayout style="@style/PostItemLayout" >

	        <TextView
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:text="参考写真" />

	        <Button
	            android:id="@+id/button_camera_post"
	            style="@style/Button"
	            android:layout_width="100dp"
	            android:layout_marginRight="10dp"
	            android:text="撮影する" />

	        <Button
	            android:id="@+id/button_gallery_post"
	            style="@style/Button"
	            android:layout_width="100dp"
	            android:text="選ぶ" />

	    </LinearLayout>

	    <ImageView
	        android:id="@+id/image_selected"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:background="@drawable/imageview_frame"
	        android:scaleType="center"
	        android:src="@drawable/ic_blankimage" />

	    <LinearLayout style="@style/PostItemLayout" >

	        <TextView
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:text="備考" />

	        <EditText
	            android:id="@+id/edittext_detail_post"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:inputType="textMultiLine"
	            android:lines="3" />

	    </LinearLayout>

	    <LinearLayout style="@style/PostItemLayout" >

	        <TextView
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:text="出品希望価格*" />

	        <EditText
	            android:id="@+id/edittext_price_post"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10" />

	        <TextView
	            android:layout_width="20dp"
	            android:layout_height="wrap_content"
	            android:text="円" />

	    </LinearLayout>

	    <Button
	        android:id="@+id/button_submit_post"
	        style="@style/Button"
	        android:layout_width="120dp"
	        android:text="投稿する" />

	</LinearLayout>
</ScrollView>
